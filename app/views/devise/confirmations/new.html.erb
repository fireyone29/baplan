<div class="col-sm-6 col-sm-offset-3">
  <%= devise_error_messages! %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= t('.resend_confirmation', default: 'Resend confirmation') %></h4>
    </div>
    
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>

        <div class="form-group">
	  <%= f.label :email %>
	  <%= f.email_field :email, autofocus: true, class: 'form-control', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
	</div>

	<%= f.submit "Resend confirmation", class: 'btn btn-primary btn-block btn-lg' %>
      <% end %>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>
