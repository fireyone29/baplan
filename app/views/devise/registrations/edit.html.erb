<%= devise_error_messages! %>

<div class="basic_form">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= t('.account_settings', default: 'Account Settings') %></h4>
    </div>

    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="form-group">
	  <%= f.label :email, class: 'control-label' %>
	  <%= f.email_field :email, autofocus: true, class: 'form-control' %>
	  <%= devise_errors_for(:email) %>
	</div>

	<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
	  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
	<% end %>

	<div class="form-group">
	  <%= f.label :password, class: 'control-label' %>
	  <small class="form-text text-muted">(leave blank if you don't want to change it)</small>
	  <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
	  <% if @minimum_password_length %>
	    <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
	  <% end %>
	  <%= devise_errors_for(:password) %>
	</div>

	<div class="form-group">
	  <%= f.label :password_confirmation, class: 'control-label' %>
	  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
	  <%= devise_errors_for(:password_confirmation) %>
	</div>

	<br />
	<div class="form-group">
	  <%= f.label :current_password, class: 'control-label' %>
	  <small class="form-text text-muted">(to confirm your changes)</small>
	  <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
	  <%= devise_errors_for(:current_password) %>
	</div>

	<%= f.submit "Update", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Delete my account</h4>
    </div>

    <div class="panel-body">
      <p>
	If you are done with you account you can delete it completely.
	<%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "This action can not be undone, are you sure?" }, method: :delete, class: 'btn btn-danger' %>
      </p>
    </div>
  </div>
</div>
