<%= devise_error_messages! %>

<div class="basic_form">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= t('.sign_up', default: 'Sign up') %></h4>
    </div>

    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group">
	  <%= f.label :email, class: 'control-label' %>
	  <%= f.email_field :email, autofocus: true, class: 'form-control' %>
	  <%= devise_errors_for(:email) %>
	</div>

	<div class="form-group">
	  <%= f.label :password, class: 'control-label' %>
	  <% if @minimum_password_length %>
	    <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
	  <% end %>
	  <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
	  <%= devise_errors_for(:password) %>
	</div>

	<div class="form-group">
	  <%= f.label :password_confirmation, class: 'control-label' %>
	  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
	  <%= devise_errors_for(:password_confirmation) %>
	</div>

	<%= f.submit "Sign up", class: 'btn btn-primary btn-block btn-lg' %>
      <% end %>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>
